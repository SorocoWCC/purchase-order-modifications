<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <template id="report_factura_de_compra_fotos_document">
            <t t-as="o" t-foreach="docs">
                <t t-call="web.html_container">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <div class="oe_structure"/>
                            <h2>Orden de Compra #
                                <span t-field="o.name"/></h2>
                            <div class="row mt32 mb32" id="informations">
                                <div class="col-3 bm-2" t-if="o.name">
                                    <strong>Cliente:</strong>
                                    <p class="m-0" t-field="o.partner_id.name"/>
                                </div>
                                <div class="col-3 bm-2" t-if="o.name">
                                    <strong>Referencia:</strong>
                                    <p class="m-0" t-field="o.name"/>
                                </div>
                                <div class="col-3 bm-2" t-if="o.date_order">
                                    <strong>Fecha:</strong>
                                    <p class="m-0" t-field="o.date_order"/>
                                </div>
                            </div>
                            <table class="table table-sm o_main_table">
                                <thead>
                                    <tr>
                                        <th>
                                            <strong>Descripción</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Cantidad</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Precio</strong>
                                        </th>
                                        <th class="text-right">
                                            <strong>Monto</strong>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-as="line" t-foreach="o.order_line">
                                        <td>
                                            <span t-field="line.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.product_qty"/>
                                            <span groups="uom.group_uom" t-field="line.product_uom.name"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <div class="row justify-content-end" id="total">
                                <div class="col-4">
                                    <table class="table table-sm">
                                        <tr class="border-black o_total">
                                            <td>
                                                <strong>Total</strong>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="o.amount_total" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                            <p style="page-break-after:always;"/>
                            <h2 class="text-center">Anexo Fotográfico</h2>
                            <table>
                                <t t-as="line" t-foreach="o.order_line">
                                    <tr>
                                        <td>
                                            <span t-field="line.imagen_lleno" t-options="{&quot;widget&quot;: &quot;image&quot;}"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <span t-field="line.imagen_vacio" t-options="{&quot;widget&quot;: &quot;image&quot;}"/>
                                        </td>
                                    </tr>
                                </t>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</openerp>